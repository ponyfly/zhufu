/* 授权操作 */
.panel-allow {width: 100%; height: 100%; position: fixed; z-index: 999; left: 0; top: 0; background: rgba(0,0,0,.8); font-size: 30rpx; text-align: center;}
.panel-allow .bar {height: 128rpx; line-height: 128rpx; background: linear-gradient(90deg, #623db1, #b351cf); font-size: 30rpx;}
.panel-allow .bar .btn-auth {display: inline-block; width: 142rpx; text-align: center; height: 68rpx; line-height: 68rpx; background: #fff; color: red; border-radius: 100rpx; font-size: 30rpx; margin-left: 30rpx;}